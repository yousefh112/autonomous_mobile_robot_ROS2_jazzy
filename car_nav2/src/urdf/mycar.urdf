<?xml version='1.0'?>

<robot name="mycar" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Include the Gazebo plugin file for simulating physical properties -->
  <xacro:include filename="$(find car_nav2)/urdf/mycar.gazebo" />

  <!-- Include the color definition file for RViz visualization configuration -->
  <xacro:include filename="$(find car_nav2)/urdf/materials.xacro" />

  <!-- Define the reference point of the robot chassis (base_footprint) to indicate the robot's position on the plane -->
  <link name="base_footprint"></link>

  <!-- Connect base_footprint to base_link with a fixed joint, base_link is the actual link of the robot chassis -->
  <joint name="base_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="base_footprint" />
    <child link="base_link" />
  </joint>

  <!-- Define the properties of the robot chassis (base_link), including inertia, collision model, and visual model -->
  <link name='base_link'>
    <pose>0 0 0.1 0 0 0</pose>

    <!-- Define inertia properties for physical simulation of mass distribution -->
    <inertial>
      <mass value="15.0" />
      <origin xyz="0.0 0 0" rpy=" 0 0 0" />
      <inertia
        ixx="0.0625" ixy="0" ixz="0"
        iyy="0.2125" iyz="0"
        izz="0.25"
      />
    </inertial>

    <!-- Define the collision model of the chassis for the physics engine's collision detection -->
    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0" />
      <geometry>
        <box size=".4 .2 .1" />
      </geometry>
    </collision>

    <!-- Define the visual model of the chassis for visualization -->
    <visual name='base_link_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0" />
      <geometry>
        <mesh filename="package://car_nav2/meshes/mycar.dae" />
      </geometry>
    </visual>

    <!-- Define the collision and visual models for the rear wheel support point -->
    <collision name='rear_caster_collision'>
      <origin xyz="-0.15 0 -0.05" rpy=" 0 0 0" />
      <geometry>
        <sphere radius="0.0499" />
      </geometry>
    </collision>

    <visual name='rear_caster_visual'>
      <origin xyz="-0.15 0 -0.05" rpy=" 0 0 0" />
      <geometry>
        <sphere radius="0.05" />
      </geometry>
    </visual>

    <!-- Define the collision and visual models for the front wheel support point -->
    <collision name='front_caster_collision'>
      <origin xyz="0.15 0 -0.05" rpy=" 0 0 0" />
      <geometry>
        <sphere radius="0.0499" />
      </geometry>
    </collision>

    <visual name='front_caster_visual'>
      <origin xyz="0.15 0 -0.05" rpy=" 0 0 0" />
      <geometry>
        <sphere radius="0.05" />
      </geometry>
    </visual>

  </link>

  <!-- Define the joint and link for the left wheel -->
  <joint type="continuous" name="left_wheel_joint">
    <origin xyz="0 0.15 0" rpy="0 0 0" />
    <child link="left_wheel" />
    <parent link="base_link" />
    <axis xyz="0 1 0" rpy="0 0 0" />
    <limit effort="100" velocity="10" />
    <dynamics damping="1.0" friction="1.0" />
  </joint>

  <link name='left_wheel'>
    <!-- Define the inertia properties of the left wheel -->
    <inertial>
      <mass value="5.0" />
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
      <inertia
        ixx="0.014" ixy="0" ixz="0"
        iyy="0.014" iyz="0"
        izz="0.025"
      />
    </inertial>

    <!-- Define the collision model of the left wheel -->
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
      <geometry>
        <cylinder radius=".1" length=".05" />
      </geometry>
    </collision>

    <!-- Define the visual model of the left wheel -->
    <visual name='left_wheel_visual'>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
      <geometry>
        <mesh filename="package://car_nav2/meshes/wheel.dae" />
      </geometry>
    </visual>
  </link>

  <!-- Define the joint and link for the right wheel -->
  <joint type="continuous" name="right_wheel_joint">
    <origin xyz="0 -0.15 0" rpy="0 0 0" />
    <child link="right_wheel" />
    <parent link="base_link" />
    <axis xyz="0 1 0" rpy="0 0 0" />
    <limit effort="100" velocity="10" />
    <dynamics damping="1.0" friction="1.0" />
  </joint>

  <link name='right_wheel'>
    <!-- Define the inertia properties of the right wheel -->
    <inertial>
      <mass value="5.0" />
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
      <inertia
        ixx="0.014" ixy="0" ixz="0"
        iyy="0.014" iyz="0"
        izz="0.025"
      />
    </inertial>

    <!-- Define the collision model of the right wheel -->
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
      <geometry>
        <cylinder radius=".1" length=".05" />
      </geometry>
    </collision>

    <!-- Define the visual model of the right wheel -->
    <visual name='right_wheel_visual'>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
      <geometry>
        <mesh filename="package://car_nav2/meshes/wheel.dae" />
      </geometry>
    </visual>
  </link>

  <!-- Define Gazebo physical parameters, including friction and other dynamic properties -->
  <gazebo reference="left_wheel">
    <mu1>0.2</mu1>
    <mu2>0.2</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.0001</minDepth>
    <maxVel>1.0</maxVel>
  </gazebo>

  <gazebo reference="right_wheel">
    <mu1>0.2</mu1>
    <mu2>0.2</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.0001</minDepth>
    <maxVel>1.0</maxVel>
  </gazebo>

  <gazebo reference="base_link">
    <mu1>0.000002</mu1>
    <mu2>0.000002</mu2>
  </gazebo>

  <!-- Define the fixed joint for the IMU sensor -->
  <joint name="imu_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="imu_link" />
  </joint>

  <link name="imu_link">
  </link>

  <!-- Define the fixed joint and properties for the Lidar sensor -->
  <joint type="fixed" name="scan_joint">
    <origin xyz="0.0 0 0.15" rpy="0 0 0" />
    <child link="scan_link" />
    <parent link="base_link" />
    <axis xyz="0 1 0" rpy="0 0 0" />
  </joint>

  <link name='scan_link'>
    <!-- Define the inertia properties of the Lidar sensor -->
    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <inertia
        ixx="1e-6" ixy="0" ixz="0"
        iyy="1e-6" iyz="0"
        izz="1e-6"
      />
    </inertial>

    <!-- Define the collision model of the Lidar sensor -->
    <collision name='collision'>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size=".1 .1 .1" />
      </geometry>
    </collision>

    <!-- Define the visual model of the Lidar sensor -->
    <visual name='scan_link_visual'>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://car_nav2/meshes/lidar.dae" />
      </geometry>
    </visual>

  </link>

  <!-- Gazebo configuration for the Lidar sensor properties -->
  <gazebo reference="scan_link">
    <selfCollide>false</selfCollide>
    <mu1 value="0.05" />
    <mu2 value="0.05" />
  </gazebo>

</robot>